    </div>
</div>
<div class="container mt-3">
    <div class="row">
        <div class="col-12 col-md-12">
            <diiv class="grid-pro-detail w-clear">
                <div class="left-pro-detail w-clear">
                    <a id="Zoom-1" class="MagicZoom"
                        data-options="zoomMode: off; hint: off; rightClick: true; selectorTrigger: hover; expandCaption: false; history: false;"
                        href="{{product.img.[0]}}"
                        title="{{product.name}}"><img
                            onerror="this.src='/thumbs/360x360x2/assets/images/noimage.jpg';"
                            src="{{product.img.[0]}}"
                            alt="{{product.name}}"></a>
                </div>

                <div class="right-pro-detail w-clear">
                    <p class="title-pro-detail">{{product.name}}</p>


                    <div class="desc-pro-detail"></div>
                    <ul class="attr-pro-detail">
                        <li class="w-clear">
                            <label class="attr-label-pro-detail">Giá:</label>
                            <div class="attr-content-pro-detail">
                                <span class="price-new-pro-detail">
                                    <div class="f-hotline">Liên hệ báo giá <span>
                                        {{#each shop.phone}}
                                        - <a href="tel:{{this}}">{{this}}</a> 
                                                
                                        {{/each}}</div>
                                </span></span>
                            </div>
                        </li>
                        <script>
                            var _price = 0;
                            var _price_list = [];
                        </script>

                        <li class="w-clear">
                            <label class="attr-label-pro-detail">Lượt xem:</label>
                            <div class="attr-content-pro-detail">{{product.views}}</div>
                        </li>
                    </ul>


                    <!-- Go to www.addthis.com/dashboard to customize your tools -->
                    <div class="addthis_inline_share_toolbox"></div>
                </div>

                <div class="clear"></div>

                <div class="tags-pro-detail w-clear">
                </div>
                <div class="clear"></div>

                <div class="tabs-pro-detail">
                    <ul class="ul-tabs-pro-detail w-clear">
                        <li class="active transition" data-tabs="info-pro-detail">Thông tin công trình</li>
                    </ul>
                    <p>{{product.desc}}</p>
                </div>
                <div class="title-main has-filter d-flex align-items-center justify-content-between">
                    <h4>Các công trình khác</h4>
                </div>

                <div class="content-main w-clear">
                    <div class="row">
                        {{#each sameProducts}}
                        <div class="col-6 col-sm-4 col-md-3 col-lg-2 col-product-custom mb-4">
                            <div class="product grid">
                                <a class="box-product text-decoration-none" href="/cong-trinh/{{this.slug}}"
                                    title="{{this.name}}">
                                    <p class="pic-product scale-img"><img
                                            onerror="this.src='thumbs/360x360x2/assets/images/noimage.png';" style="height: 198px !important;"
                                            src="{{this.img.[0]}}"
                                            alt="{{this.name}}" /></p>

                                </a>
                                <div class="info-product">
                                    <div class="wrap-info">
                                        <div class="info1">
                                            <h3 class="name-product "> <a class="text-decoration-none"
                                                    href="/cong-trinh/{{this.slug}}" title="{{this.name}}">{{this.name}}</a></h3>
                                            <p class="price-product">
                                                <span class="price-new">Liên hệ: <span>
                                                    {{#each ../shop.phone}}
                                                    - <a href="tel:{{this}}">{{this}}</a> 
                                                    {{/each}}
                                                    </span></span>
                                            </p>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    <div class="clear"></div>
                    <div class="pagination-home"></div>
                </div>
        </div>
    </div>
</div>