<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row align-items-center">
            <div class="col-md-6 col-8 align-self-center">
                <h3 class="page-title mb-0 p-0">{{title}}</h3>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin">Trang chủ</a></li>
                            <li class="breadcrumb-item"><a href="/admin/san-pham">Sản phẩm</a></li>
                            <li class="breadcrumb-item active" aria-current="page">{{title}}</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    
    <div class="container-fluid">
        <!-- Row -->
        <div class="row">
            <!-- Column -->
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <form class="form-horizontal form-material mx-2" method="POST" action="">
                            <div class="form-group">
                                <label class="col-md-12 mb-0">Tên Sản phẩm</label>
                                <div class="col-md-12">
                                    <input type="text" name="name" value="{{product.name}}"
                                        class="form-control ps-0 form-control-line" required>
                                </div>
                            </div>
                            <div class="form-group mb-5">
                                <label class="col-md-12 mb-0">Mô tả sản phẩm</label>
                                <div class="col-md-12">
                                    <textarea name="desc" rows="5" class="form-control ps-0 form-control-line">{{product.desc}}</textarea>
                                </div>
                            </div>
                            <div class="form-group" id="img-container">
                                <label for="img[]" class="col-md-12">Link hình ảnh</label>
                                {{#if product.img}}
                                {{#each product.img}}
                                <div class="col-md-12 mb-2">
                                    <input type="text" value="{{this}}"
                                        class="form-control ps-0 form-control-line" name="img[]"
                                        id="img[]" required>
                                    {{#if (checkAddButton @index)}}
                                    <a class="text-white btn btn-danger delete-img mt-2 mb-2">Xoá ảnh</a>
                                    {{/if}}
                                </div>
                                {{/each}}
                                {{else}}
                                <div class="col-md-12">
                                    <input type="text"
                                        class="form-control ps-0 form-control-line" name="img[]"
                                        id="img[]" required>
                                </div>
                                {{/if}}
                            </div>
                            <div class="form-group">
                                <label class="col-sm-12">Danh mục sản phẩm</label>
                                <div class="col-sm-12 border-bottom">
                                    <select class="form-select shadow-none ps-0 border-0 form-control-line" name="categoryId" required>
                                        {{#each cate}}
                                        <option name="categoryId" value="{{this._id}}">{{this.name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <div class="col-sm-12 d-flex">
                                    <button id="button-add-img" class="btn btn-secondary mx-auto mx-md-0 text-white">Thêm ảnh</button>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-12 d-flex">
                                    <button class="btn btn-success mx-auto mx-md-0 text-white" type="submit">{{#if isAdd}}Thêm sản phẩm{{else}}Sửa sản phẩm{{/if}}</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Column -->
        </div>
        
    </div>
    <footer class="footer"> © 2021 Material Pro Admin by <a href="https://www.wrappixel.com/">wrappixel.com </a>
    </footer>
    
</div>

<script>
    document.addEventListener('DOMContentLoaded', function(){
        const imgContainer = document.getElementById('img-container')
        
        document.getElementById('button-add-img').addEventListener('click', function(e){
            e.preventDefault()

            const newInput = document.createElement('div');
            newInput.className = 'col-md-12 mb-2';
            newInput.innerHTML = `<input type="text" class="form-control ps-0 form-control-line" name="img[]" id="img[]">
            <a class="text-white btn btn-danger delete-img mt-2 mb-2">Xoá ảnh</a>
            `;

            imgContainer.appendChild(newInput);
        })

        imgContainer.addEventListener('click', function (e) {
            if (e.target && e.target.className === 'text-white btn btn-danger delete-img mt-2 mb-2') {
                const parentDiv = e.target.parentElement;
                imgContainer.removeChild(parentDiv);
            }
        });
    })    
</script>