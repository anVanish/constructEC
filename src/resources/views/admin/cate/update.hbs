<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row align-items-center">
            <div class="col-md-6 col-8 align-self-center">
                <h3 class="page-title mb-0 p-0">{{title}}</h3>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin">Trang chủ</a></li>
                            <li class="breadcrumb-item"><a href="/admin/san-pham">Sản phẩm</a></li>
                            <li class="breadcrumb-item active" aria-current="page">{{title}}</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    
    <div class="container-fluid">
        <!-- Row -->
        <div class="row">
            <!-- Column -->
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <form class="form-horizontal form-material mx-2" method="POST" action="">
                            <div class="form-group">
                                <label class="col-md-12 mb-0">Tên Danh mục</label>
                                <div class="col-md-12">
                                    <input type="text" name="name" value="{{cate.name}}"
                                        class="form-control ps-0 form-control-line" required>
                                </div>
                            </div>
                            <div class="form-group mb-5">
                                <label class="col-md-12 mb-0">Mô tả</label>
                                <div class="col-md-12">
                                    <textarea name="desc" rows="5" class="form-control ps-0 form-control-line">{{cate.desc}}</textarea>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-12 d-flex">
                                    <button class="btn btn-success mx-auto mx-md-0 text-white" type="submit">{{#if isAdd}}Thêm danh mục{{else}}Sửa danh mục{{/if}}</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Column -->
        </div>
        
    </div>
    <footer class="footer"> © 2021 Material Pro Admin by <a href="https://www.wrappixel.com/">wrappixel.com </a>
    </footer>
</div>
