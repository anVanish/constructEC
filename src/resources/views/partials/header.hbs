<ul class="h-card hidden">
    <li class="h-fn fn">{{shop.name}}</li>
    <li class="h-org org">{{shop.name}}</li>
    <li class="h-tel tel">{{shop.phone.[0]}}</li>
    <li><a class="u-url ul" href="/">{{shop.social.website}}</a></li>
</ul>
<h1 class="hidden-seoh">{{shop.name}} {{#each shop.phone}} | {{this}} {{/each}}</h1>

<div class="header" id="main-header">
    <div class="head-slogan d-none d-sm-block">
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-auto">
                    Hoạt động {{shop.worktime}}
                </div>
                <div class="col-auto">
                    <i class="far fa-map-marker-alt"></i>&nbsp;Địa chỉ: {{shop.address.street}}, {{shop.address.ward}}, {{shop.address.district}}, {{shop.address.city}}
                </div>
                <div class="col-auto">
                    <i class="fas fa-envelope"></i>&nbsp;Email:
                    {{shop.email}}
                </div>
            </div>
        </div>
    </div>
    <div class="line-top pt-2 d-none d-sm-block">
        <div class="container">
            <div class="row align-items-center justify-content-between">
                <div class="col-12 col-md-2 pt-3">
                    <a href="/" class="col-auto"><img class="main-logo" style="max-width: 100px"
                            src={{shop.logo}} /></a>

                </div>
                <div class="col-md-10 col-12">

                    <div class="d-flex justify-content-between align-items-center">
                        <div class="col-md-6 mx-auto text-center">
                            <h2 class="text-danger" style="font-weight:bolder;">{{uppercase shop.name}}</h2>
                            <h5>"Uy tín - Chất lượng tạo nên thương hiệu"</h2>
                        </div>
                        <div class="col-md-4">
                            <div class="xhotline">
                                <span class="pull-left">Hotline</span>
                                <div class="pull-left d-inline-block">
                                    {{#each shop.phone}}
                                    <a class="d-block" href="tel:{{this}}">{{this}}</a><br>
                                    {{/each}}
                                </div>
                                <div class="clearfix"></div>

                            </div>
                            <div class="search mt-3">
                                <form action="/cong-trinh">
                                    <input type="text" value="{{search}}" name="search" placeholder="Tìm kiếm sản phẩm" id="search-box"/><button
                                        type="submit">Tìm kiếm</button>
                                </form>
                            </div>
                        </div>

                    </div>

                </div>

            </div>
        </div>

    </div>
    <div class="wrap-menu">
        <div class="menu clearfix container">
            <ul class="d-flex align-items-center justify-content-between menu-part">
                <li><a class="transition {{#if pageHome}}active{{/if}}" href="/" title="Trang chủ">Trang chủ</a></li>
                <li><a class="transition {{#if pageAbout}}active{{/if}}" href="/gioi-thieu"
                        title="GIỚI THIỆU">GIỚI THIỆU</a></li>
                <li><a class="transition {{#if pageProduct}}active{{/if}}" href="/cong-trinh" title="SẢN PHẨM">Công trình</a>
                    <ul>
                        {{#each cate}}
                        <li><a href="/danh-muc/{{this.slug}}">{{this.name}}</a></li>
                        {{/each}}
                    </ul>
                </li>
                <li><a class="transition {{#if pageService}}active{{/if}}" href="/dich-vu" title="Dịch vụ">Dịch
                        vụ</a></li>
                <li><a class="transition {{#if pageBlog}}active{{/if}}" href="/tin-tuc" title="Tin tức">Tin
                        tức</a></li>
                <li><a class="transition {{#if pageContact}}active{{/if}}" href="/lien-he" title="Liên hệ">Liên
                        hệ</a></li>
            </ul>
        </div>
    </div>
    <div class="top-header d-block d-sm-none">
        <div class="container">
            <div class="row align-items-center justify-content-between">

                <div class="col-3 col-md-2 logo-col">
                    <div class="pr-3 pr-sm-0">
                        <a href="/" class="col-auto"><img
                                src={{shop.logo}} /></a>
                    </div>
                </div>
                <div class="col-5 hotline-mobile">
                    <a href="tel:0913953574"><i class="fal fa-phone-square-alt"></i>&nbsp;{{shop.phone.[0]}}</a>
                </div>
                <div class="col-4 d-block d-sm-none">
                    <div class="menu-res">
                        <div class="menu-bar-res">
                            <a href="javascript:void(0)" class="trigger-search"><i class="fal fa-search"></i></a>
                            <a id="hamburger" href="/#menu" title="Menu"><i class="fal fa-bars"></i></a>
                        </div>
                    </div>
                    <nav id="menu">
                        <ul>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <div class="search-mobile-custom">
            <div class="row align-items-center justify-content-between">
                <div class="form-search">
                    <form class="top-form" action="/cong-trinh">
                        <input name="search" class="place-white" placeholder="Tìm kiếm ..." required value="" />
                    </form>
                </div>
            </div>
            <span class="closex"><i class="fal fa-window-close"></i></span>
        </div>
    </div>
</div>